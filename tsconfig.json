{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@auth/*": ["auth/*"],
      "@appointments/*": ["appointments/*"]
    }
  },
  "include": ["src/**/*", "src/generated/prisma"],
  "exclude": ["node_modules", "dist"]
}
